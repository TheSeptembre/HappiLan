<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical">
    <LinearLayout
            android:id="@+id/layMousqueton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="25dp" android:orientation="horizontal">
        <TextView
                android:text="Mousqueton"
                android:layout_width="233dp"
                android:layout_height="wrap_content" android:id="@+id/txtMousqueton"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="78dp" android:id="@+id/cbxMousqueton"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="25dp" android:orientation="horizontal">
        <TextView
                android:text="Gants d'intervention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/txtGants"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="78dp" android:id="@+id/cbxGants"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="25dp" android:orientation="horizontal">
        <TextView
                android:text="Ceinture de sécurité tactique"
                android:layout_width="233dp"
                android:layout_height="wrap_content" android:id="@+id/txtCeinture"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="78dp" android:id="@+id/cbxCeinture"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="25dp" android:orientation="horizontal">
        <TextView
                android:text="Détecteur de méteaux"
                android:layout_width="233dp"
                android:layout_height="wrap_content" android:id="@+id/txtDetecteur"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="78dp" android:id="@+id/cbxDetecteur"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="25dp" android:orientation="horizontal">
        <TextView
                android:text="Brassard de sécurité"
                android:layout_width="233dp"
                android:layout_height="wrap_content" android:id="@+id/txtBrassard"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="78dp" android:id="@+id/cbxBrassard"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="25dp" android:orientation="horizontal">
        <TextView
                android:text="Lampe torche"
                android:layout_width="233dp"
                android:layout_height="wrap_content" android:id="@+id/txtLampe"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="78dp" android:id="@+id/cbxLampe"/>
    </LinearLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="25dp" android:orientation="horizontal">
        <TextView
                android:text="Gilet pare balle"
                android:layout_width="233dp"
                android:layout_height="wrap_content" android:id="@+id/txtGilet"/>
        <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="78dp" android:id="@+id/cbxGilet"/>
    </LinearLayout>
</LinearLayout>